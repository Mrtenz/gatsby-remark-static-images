{
  "name": "gatsby-remark-static-images",
  "version": "1.0.1",
  "description": "Copy images in markdown without processing them.",
  "main": "index.js",
  "repository": "https://github.com/Mrtenz/gatsby-remark-static-images.git",
  "author": "Maarten Zuidhoorn <maarten@zuidhoorn.com>",
  "license": "MIT",
  "keywords": [
    "gatsby",
    "gatsby-plugin",
    "remark",
    "images"
  ],
  "dependencies": {
    "himalaya": "^1.1.0",
    "is-relative-url": "^2.0.0",
    "slash": "^2.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.1.0",
    "@types/is-relative-url": "^2.0.0",
    "@types/node": "^10.12.19",
    "@types/slash": "^2.0.0",
    "codecov": "^3.7.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "prettier": "^1.16.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-origin-ordered-imports-rule": "^1.3.0-0",
    "typescript": "^3.2.4"
  },
  "scripts": {
    "build": "babel --extensions '.ts' src/index.ts --out-dir .",
    "prepublish": "yarn run build",
    "lint": "yarn run lint:tsc && yarn run lint:tslint && yarn run lint:prettier",
    "lint:tsc": "tsc --noEmit",
    "lint:tslint": "tslint --project .",
    "lint:prettier": "prettier --check 'src/**/*.{ts,tsx}'",
    "prettier": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --project . --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
